<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
    <div class="panel-body">
        <h2>
          <%= @course.title %>
            <small><%= @course.code %></small>
        </h2>

            Teacher:
            <%= link_to @course.teacher.name_with_initial, person_path(@course.teacher.id) %>

    </div>
    <div class="panel-footer">
        <%= link_to 'Edit Course', edit_course_path(@course), class: 'btn btn-primary btn-md'  %>
        <%= link_to 'Back', courses_path, class: 'btn btn-default btn-md' %>
    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        Course Students
    </div>
    <% if @students_courses.blank? %>
        <strong>There are no students in this course.</strong>
    <% else %>
        <table class="table table-hover">
            <thead>
            <tr>
                <td>First Name</td>
                <td>Last Name</td>
                <td>Email</td>
                <td>Actions</td>
            </tr>
            </thead>
            <tbody>
            <% @students_courses.each do |student_course| %>
                <tr>
                    <td><%= link_to student_course.person.first_name, person_path(student_course.person.id) %></td>
                    <td><%= link_to student_course.person.last_name, person_path(student_course.person.id) %></td>
                    <td><%= link_to student_course.person.email, person_path(student_course.person.id) %></td>
                    <td><%= link_to 'Show', person_path(student_course.person.id), class: 'btn btn-default btn-md' %></td>
                </tr>
            <% end %>
            </tbody>
        </table>

    <% end %>

    <div class="panel-footer">
        <%= link_to 'Add Student', new_student_course_path(:course_id => @course.id), class: 'btn btn-success btn-md'  %>
        <%= link_to 'Back', courses_path, class: 'btn btn-default btn-md' %>
    </div>
</div>