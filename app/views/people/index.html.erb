<p id="notice"><%= notice %></p>
<div class="panel panel-primary">
    <div class="panel-heading">
        People
    </div>
    <div class="panel-body">


        <div class="row">
            <div class="col-lg-6">
                <%= form_tag(people_path, :method => "get", id: "search-form", :class => 'form-inline') do %>
                    <div class="form-group">
                        <%= text_field_tag :search, params[:search], placeholder: "Search People", class: 'form-control' %>
                    </div>
                    <%= submit_tag "Search", :name => nil, class: 'btn btn-default btn-md btn-submit' %>
                <% end %>
            </div>
            <div class="col-lg-6">
                <%= link_to 'New Person', new_person_path, class: 'btn btn-success btn-md pull-right' %>
            </div>
        </div>


    </div>
    <section id="Table">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
            <% @people.each do |person| %>
                <tr>
                    <td><%= person.first_name %></td>
                    <td><%= person.last_name %></td>
                    <td><%= person.email %></td>
                    <td>
                        <%= link_to 'Show', person, class: 'btn btn-default btn-sm' %>
                        <%= link_to 'Edit', edit_person_path(person), class: 'btn btn-primary btn-sm' %>
                        <%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
                    </td>
                </tr>
            <% end %>
            </tbody>
        </table>
    </section>
</div>
