<p id="notice"><%= notice %></p>

<h1>Student Courses</h1>

<table>
    <thead>
    <tr>
        <th>Person</th>
        <th>Course</th>
        <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @student_courses.each do |student_course| %>
        <tr>
            <td><%= link_to student_course.person.name_with_initial, person_path(student_course.person.id) %></td>
            <td><%= link_to student_course.course.title, course_path(student_course.course.id) %></td>
            <td><%= link_to 'Show', student_course %></td>
            <td><%= link_to 'Edit', edit_student_course_path(student_course) %></td>
            <td><%= link_to 'Destroy', student_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Student Course', new_student_course_path %>
